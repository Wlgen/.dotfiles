set autoindent
set autoread
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set hlsearch
set ignorecase
set smartcase
set encoding=utf-8
set linebreak
syntax enable
set laststatus=2
set ruler
set wildmenu
set cursorline
set number
set relativenumber
set noerrorbells
set title
set backspace=indent,eol,start
set confirm
set history=1000
set nomodeline
set noswapfile
colorscheme onedark

let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

call plug#begin('~/.vim/plugged')
Plug 'preservim/nerdtree'
Plug 'ryanoasis/vim-devicons'
Plug 'airblade/vim-gitgutter'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'neoclide/coc.nvim', {'branch': 'release'}
Plug 'godlygeek/tabular'
Plug 'yggdroot/indentline'
call plug#end()

"----------airline----------"
